        function navigateToPage(index) {
            if (index < 0 || index >= bookPages.length) return;

            // Add exit animation
            const currentContent = bookContent.querySelector('.grid');
            if (currentContent) {
                currentContent.classList.remove('book-page-flip-enter');
                currentContent.classList.add('book-page-flip-exit');
            }

            // Wait for exit animation, then update
            setTimeout(() => {
                currentPageIndex = index;
                renderBookContent(true);
                renderChapterNav();
                updateProgress();
                updateNavButtons();
            }, 300);
        }

        // ============================================
        // EVENT LISTENERS
        // ============================================
        prevBtn.addEventListener('click', () => {
            if (currentPageIndex > 0) {
                navigateToPage(currentPageIndex - 1);
            }
        });

        nextBtn.addEventListener('click', () => {
            if (currentPageIndex < bookPages.length - 1) {
                navigateToPage(currentPageIndex + 1);
            }
        });

        // Keyboard navigation
        document.addEventListener('keydown', (e) => {
            // Only trigger if book preview is in view
            const bookSection = document.getElementById('book-preview');
            const rect = bookSection.getBoundingClientRect();
            const isInView = rect.top < window.innerHeight && rect.bottom > 0;

            if (isInView) {
                if (e.key === 'ArrowLeft' && currentPageIndex > 0) {
                    navigateToPage(currentPageIndex - 1);
                } else if (e.key === 'ArrowRight' && currentPageIndex < bookPages.length - 1) {
                    navigateToPage(currentPageIndex + 1);
                }
            }
        });

        // ============================================
        // PARALLAX EFFECT
        // ============================================
        window.addEventListener('scroll', function() {
            const scrolled = window.pageYOffset;
            const parallax = document.querySelector('.parallax-bg');
            const rate = scrolled * -0.5;
            parallax.style.transform = 'translate3d(0, ' + rate + 'px, 0)';
        });

        // ============================================
        // FORM SUBMISSION & SUCCESS MODAL
        // ============================================
        function showSuccessModal() {
            const modal = document.getElementById('successModal');
            modal.style.display = 'flex';
            // Trigger reflow to enable transition
            modal.offsetHeight;
            modal.classList.add('active');
            // Disable body scroll
            document.body.style.overflow = 'hidden';
        }

        async function handleFormSubmit(event) {
            event.preventDefault();
            
            const form = event.target;
            const submitButton = form.querySelector('button[type="submit"]');
            const originalButtonText = submitButton.textContent;
            
            // Get form data
            const formData = new FormData(form);
            const data = {
                name: formData.get('name'),
                whatsapp: formData.get('whatsapp'),
                email: formData.get('email'),
                city: formData.get('city')
            };
            
            // Validate
            if (!data.name || !data.whatsapp || !data.email || !data.city) {
                alert('Tanpri ranpli tout chan yo');
                return;
            }
            
            // Update button state
            submitButton.disabled = true;
            submitButton.textContent = 'Ap voye...';
            submitButton.style.opacity = '0.7';
            
            try {
                // Get visit ID for conversion tracking
                const visitId = sessionStorage.getItem('current_visit_id');
                
                // Send to API
                const response = await fetch('/api/leads', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        ...(visitId && { 'x-visit-id': visitId }),
                    },
                    body: JSON.stringify(data)
                });
                
                const result = await response.json();
                
                if (response.ok && result.success) {
                    // Track conversion
                    if (visitId && window.trackConversion) {
                        window.trackConversion(result.data.id);
                    }
                    
                    // Success! Reset form and show success modal with 90% progress
                    form.reset();
                    showSuccessModal();
                    
                    console.log('‚úÖ Lead captured:', result.data);
                } else {
                    throw new Error(result.error || 'Failed to submit');
                }
            } catch (error) {
                console.error('Form submission error:', error);
                alert('Te gen yon er√®. Tanpri eseye ank√≤ oswa kontakte nou sou WhatsApp.');
            } finally {
                // Reset button state
                submitButton.disabled = false;
                submitButton.textContent = originalButtonText;
                submitButton.style.opacity = '1';
            }
        }

        document.querySelector('form').addEventListener('submit', handleFormSubmit);

        // ============================================
        // CTA BUTTONS - SCROLL TO FORM
        // ============================================
        function scrollToForm() {
            const form = document.querySelector('form');
            if (form) {
                form.scrollIntoView({ behavior: 'smooth', block: 'center' });
                
                // Focus on first input after scroll
                setTimeout(() => {
                    const firstInput = form.querySelector('input[name="name"]');
                    if (firstInput) {
                        firstInput.focus();
                    }
                }, 500);
            }
        }

        // ============================================
        // INITIALIZE
        // ============================================
        document.addEventListener('DOMContentLoaded', () => {
            // Ensure page starts at top on mobile
            window.scrollTo(0, 0);
            
            // Force headline visibility on mobile
            const headline = document.querySelector('.hero-text-container h1');
            if (headline) {
                headline.style.display = 'block';
                headline.style.visibility = 'visible';
                headline.style.opacity = '1';
            }

            // Ensure success modal is hidden initially
            const successModal = document.getElementById('successModal');
            if (successModal) {
                successModal.style.display = 'none';
                successModal.classList.remove('active');
            }

            renderChapterNav();
            renderBookContent(false);
            updateProgress();
            updateNavButtons();

            // Attach scroll handlers to all CTA buttons (except submit button)
            const ctaButtons = document.querySelectorAll('button:not([type="submit"])');
            ctaButtons.forEach(button => {
                // Check if button text contains registration keywords
                const buttonText = button.textContent.toLowerCase();
                if (
                    buttonText.includes('enskri') || 
                    buttonText.includes('rez√®ve') ||
                    buttonText.includes('k√≤manse')
                ) {
                    button.addEventListener('click', scrollToForm);
                }
            });

            console.log('‚úÖ Lead capture system initialized');
        });
    </script>
</body>
</html>
